<?xml version="1.0" encoding="UTF-8"?>
<!-- This enables the simple binding mode in JAXB. See http://weblogs.java.net/blog/kohsuke/archive/2006/03/simple_and_bett.html -->
<jaxb:bindings xmlns:jaxb="http://java.sun.com/xml/ns/jaxb"
	jaxb:version="2.0" xmlns:xjc="http://java.sun.com/xml/ns/jaxb/xjc"
	jaxb:extensionBindingPrefixes="xjc">

	<jaxb:globalBindings>
		<jaxb:javaType name="java.util.Calendar" xmlType="xs:date"
			parseMethod="javax.xml.bind.DatatypeConverter.parseDate" printMethod="javax.xml.bind.DatatypeConverter.printDate" />
		<jaxb:javaType name="java.lang.String" xmlType="xs:base64Binary"
			parseMethod="javax.xml.bind.DatatypeConverter.parseBase64Binary" printMethod="javax.xml.bind.DatatypeConverter.printBase64Binary" />
		<xjc:simple />
	</jaxb:globalBindings>
</jaxb:bindings>
